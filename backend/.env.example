# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# Socket.io
SOCKET_MAX_RECONNECTION_ATTEMPTS=10
SOCKET_RECONNECTION_DELAY_MS=1000

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Session
SESSION_TIMEOUT_MS=3600000

# Sensor Configuration
SENSOR_BUFFER_SIZE=1000
SENSOR_CLEANUP_INTERVAL_MS=60000

# Authentication (JWT)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# Database Configuration
MONGO_URL=mongodb://localhost:27017/twinsensor-hub

# ============================================================================
# Notes for production:
# ============================================================================
# 1. JWT_SECRET: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 2. MONGO_URL: Use MongoDB Atlas for production
# 3. LOG_LEVEL: Set to 'warn' or 'error' in production
# 4. CORS_ORIGIN: Update with your actual frontend URL
